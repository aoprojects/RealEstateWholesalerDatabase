


<h2 class="blue align-center">Edit Your Wholesaler Profile</h2>
<p class="align-center">Leave blank anything you do not want to update.</p>


<span class="form-inline">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

      <div class="field">
          <h4 class="blue"><%= f.label :Wholesaling_Company %>
          <%= f.text_field :company, autofocus: true, class: 'form-control' %></h4>
      </div>

      <div class="field">
        <h4 class="blue"><%= f.label :Company_email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %></h4>
      </div>

      <div class="field">
          <h4 class="blue"><%= f.label :Phone_number %>
          <%= f.text_field :phone, class: 'form-control' %></h4>
      </div>

      <div class="field">
          <h4 class="blue"><%= f.label :Wholesaler_website %>
          <%= f.text_field :url, class: 'form-control' %></h4>
      </div>

      <div class="field">
          <h4 class="blue"><%= f.label :Please_list_your_specialties %>
          <%= f.text_field :specialties, placeholder: 'eg. multifamily, single family, land...', class: 'form-control' %></h4>
      </div>

      <div class="field">
            <h4 class="blue"><%= f.label :Buyers_should_also_know %>
            <%= f.text_field :details, placeholder: 'eg. Text me for fast response / Buy directly from my website.', class: 'form-control' %></h4>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <h4 class="blue"><%= f.label :New_password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></h4>
      </div>

      <div class="field">
        <h4 class="blue"><%= f.label :New_password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></h4>
      </div>

      <hr>

      <div class="field">
        <h4 class="blue"><%= f.label :current_password_ %><i> ( &#42; required)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %></h4>
      </div>

      <br>
      <div class="actions align-center">
        <%= f.submit "Update Profile", class: 'btn btn-info btn-lg align-center' %>
      </div>
    <% end %>

</span>
<hr>
<h3 class="blue align-center">Cancel my account</h3>

<p class="align-center"><b>Unhappy?</b></p> 
  <p class="align-center"><%= link_to 'Tell Us About It', about_path, class: 'btn btn-info' %>&nbsp;...or...&nbsp;<%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure? Your profile info and all your listings will be deleted." }, method: :delete, class: 'btn btn-info' %></p>

<br><%= link_to "Back to My Account", :back %>
