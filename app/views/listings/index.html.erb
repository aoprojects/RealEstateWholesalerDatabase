<p id="notice"><%= notice %></p>

<h1>All (TODO: display state name here) Listings</h1>

<table>
  <thead>
    <tr>
      <th>Wholesaling Company </th>
      <th>City</th>
      <th>TODO erase: State ID</th>
      
      <th>Email</th>
      <th>Phone #</th>
      <th>Website</th>
      <th>Wholesaler Specialties</th>
      <th>Buyers should also know</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>

        <td><%= current_user.company %></td>
        <td><%= listing.city %></td>
        <td><%= listing.state_id %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.phone %></td>
        <td><%= current_user.url %></td>
        <td><%= current_user.specialties %></td>
        <td><%= current_user.details %></td>

        <td><%= link_to 'Show', listing %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

