<p id="notice"><%= notice %></p>
<div class="container">
    <h2 class="align-center">All (TODO: state name here) Wholesaler Listings</h2><br>


  <div class="row">
        <% @listings.each do |listing| %>
          <%= link_to listing do %>
            <div class="col-sm-6 col-xs-12 well listing-outline">
            
                <p><b>Wholesaler:</b> <%= listing.user.company %></p>
                <p><b>Location:</b> <%= listing.city %>, <%= listing.state %></p>
                <p><b>Email:</b> <%= listing.user.email %></p>
                <p><b>Phone:</b> <%= listing.user.phone %></p>
                <p><b>Website:</b> <%= listing.user.url %></p>

                <p><b>Specialties:</b> <%= listing.user.specialties %></p>
      
                
                      
                

                <% if user_signed_in? && listing.user == current_user %>

                    <p><%= link_to edit_listing_path(listing), class: 'btn btn-default btn-sm' do %>
                       <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                    <% end %> &nbsp;
                  
                    <%= link_to listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    <% end %></p>
                <% end %><!-- end for if user signed in -->
            </div><!-- end each col-sm-6 col-xs-12-->
            
          <% end %><!-- end for display each listing -->
         <% end %> <!-- link to each listing -->
     </div><!-- end row(s) -->


    <br>

    <p>TODO: edit how paginations look. Center. Make smaller. </p>
    <p><%= will_paginate @listings, renderer: BootstrapPagination::Rails, class: 'align-center' %></p>

    <div class="row">
      <div class="col-xs-12">
        <%= link_to 'Create New Listing', new_listing_path, class: 'btn btn-default btn-lg align-center' %>
      </div><!-- end div for col-xs-12 -->
    </div><!-- end row for new listing button -->

</div><!-- end .well -->

