
<p id="notice"><%= notice %></p>

  <h2 class="align-center">All <span>TODO listing.state_name</span> Wholesaler Listings</h2>
  <h4 class="align-center">Click on a wholesaler to see their full profile</h4><br><br>

     <b class="float-right"><%= link_to 'Create New Listing', new_listing_path, class: 'btn btn-primary btn-md' %></b>
     <br>


  <table class="table table-responsive table-striped table-hover">
          <caption>

          </caption>
          <thead class="hidden-xs">  
            <tr>
              <th scope: "col">Wholesaler</th>
              <th scope: "col">Location</th>
              <th scope: "col">Specialties</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
      <% @listings.each do |listing| %>
        <%= link_to listing, class: 'no-decoration' do %>
            <tr>
              <td><span class="hidden-sm hidden-md hidden-lg inline">Wholesaler: </span><%= listing.user.company %></td>
              <td><span class="hidden-sm hidden-md hidden-lg inline">Location: </span><%= listing.city %>, <%= listing.state_name %></td>
              <td><span class="hidden-sm hidden-md hidden-lg inline">Specialties: </span><%= listing.user.specialties %></td>
              <td>
                <%= link_to "View", listing_path(listing) %>
                <% if user_signed_in? && listing.user == current_user %>

                  <%= link_to edit_listing_path(listing), class: 'btn btn-info btn-sm' do %>
                      Edit
                  <% end %> &nbsp;
                
                  <%= link_to listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info btn-sm' do %>
                      Delete
                  <% end %>
                  
                <% end %><!-- end for if user signed in -->
              </td>
            </tr>
          <% end %> <!-- link to each listing -->
        <% end %><!-- end for ruby block of index display each listing -->
        </tbody>
    </table>
    <div class="align-center">  
      <p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>
    </div>
    <br>

   
 



