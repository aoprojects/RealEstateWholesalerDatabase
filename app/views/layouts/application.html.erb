  <title>Real Estate Wholesaler Database</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

 
  <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="A national database of real estate investment wholesalers, free to view." content="Real Estate Wholesaler Databse">
    <!-- favicon below -->
    <%= favicon_link_tag %>
  
    <!--     Google fonts imported below --> 
    <link href='https://fonts.googleapis.com/css?family=Cousine' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Patrick+Hand' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'>

        
    <%= javascript_include_tag('application') %>

</head>
<body class="<%= controller_name %>_<%= action_name%>">

    <%= render 'layouts/navbar' %>
    <%= render 'layouts/newsletter_modal' %>

    <div class="container" id="main-container">  
   
        <div><!-- begin div for internal page content -->
    
                <% flash.each do |name, msg| %>
      

            <% content_tag(:div, msg, class: "alert alert-#{name}") %>
            <% end %>
        
            <%= yield %>
    
        </div><!-- end div for internal page content -->
</div><!--end #main-container -->

<br>
    <div class="clearfix"></div>
    <br><br>
    <footer>

            <div class="row align-center">
                <div class="col-sm-4 col-xs-12 align-center">
                    
                    <p><%= link_to 'List Yourself On This Site', new_listing_path %></p>
                    <p><%= link_to "Terms, Privacy, & Pricing", privacy_policy_path %></p>
                    <p><%= link_to "Contact | FAQ", about_path %></p>
                    <p>team@rewholesalerdatabase.com</p>
                    
                    
                </div><!-- end col -->

                <div class="col-sm-4 col-xs-12 align-center vertical-center">
                    <br>
                    <p><%= image_tag("rewd_logo_v1_small.png") %></p>
                   
                </div>

                <div class="col-sm-4 col-xs-12 align-center">
                    
                    <p><a href="https://www.facebook.com/REWholesalerDatabase" target="_none" class="nav-text"><%= image_tag('facebook.png', alt: "facebook", class: 'icon-small grow') %></a> &nbsp; &nbsp; &nbsp;

                    <a href="https://twitter.com/REWholesalerDb" alt="twitter" target="_none" class="nav-text"><%= image_tag('twitter.png', alt: 'twitter', class: 'icon-small bottom grow') %></a></p>
                    <br>
                    <p class="vertical-center"><%= link_to "Real Estate Wholesaler Database", root_path, class: 'title-footer no-decoration no-wrap' %></p>
                    <P>Developed by <%= link_to "Virgo Ventures LLC", "http://www.virgoventures.org", target: "_none" %> </p>

                </div><!-- col -->
            </div><!-- row -->
       
    </footer>

</body>
</html>
