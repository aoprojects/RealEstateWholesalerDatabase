<body class="<%= controller_name %><%= action_name%>">

    <%= render 'layouts/navbar' %>


    <div class="container" id="main-container">  
   
        <div><!-- begin div for internal page content -->
            <% flash.each do |name, msg| %>
            <% content_tag(:div, msg, class: "alert alert-#{name}") %>
            <% end %>
           

            <%= yield %>


    
        </div><!-- end div for internal page content -->
</div><!--end #main-container -->
        <br>
        <div><!-- start div for footer -->
            <footer>
                <ul class="footer-lists">
                    <li><%= render 'layouts/new_wholesaler_modal' %></li>
                    <li><%= link_to 'List yourself as a trainer', wholesaling_path %></li>
                    <li>team@rewholesalerdatabase.com</li>
                </ul>

                <ul class="align-right-float">
                    <li><%= link_to "Real Estate Wholesaler Database", root_path, class: 'title-footer no-decoration' %></li>
                </ul> 
            </footer>
        </div> 
</body>
</html>
