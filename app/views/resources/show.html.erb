<p id="notice"><%= notice %></p>

<div class="container listing-outline">
  <br>
  <div class="row">
    <div class="col-xs-4">
      DO I WANT TO HAVE A THICK BORDER AROUND EACH RESOURCE?
      <p>TODO: company logo goes here</p>
    </div><!-- end row for left -->
    <div class="col-xs-8">
      
        <h4><strong class="blue">Resource:</strong>
        <%= @resource.resource_name %></h4>
     
        <h5><strong class="blue">Our Specialties:</strong>
        <%= @resource.specialties %></h5>
     
        <h5><strong class="blue">Our Website:</strong>
        <%= @resource.url %></h5>
      
    </div><!-- end div for col -->
  </div><!-- end row class -->
  <br>
    <div class="align-center">
  
      <%= link_to resources_path, class: 'btn btn-info btn-md margin' do %>
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                See All Resources
      <% end %>

    	<% if user_signed_in? && current_user == @resource.user %>
    		
          <%= link_to edit_resource_path(@resource), class: 'btn btn-info btn-md margin' do %>
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                Edit
          <% end %>
          
    		  <%= link_to new_resource_path, class: 'btn btn-info btn-md margin' do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                New Resource
          <% end %>

    	<% end %>
    </div>
